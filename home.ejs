<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="CSS/styles.css">
    <title>Book List</title>
</head>
    
<body>
    <div class="container my-4">
        <h1 id="main-heading">My Book Catalog</h1>
        <a class="btn btn-dark btn-lg" href="/login" role="button" 
   style="position: absolute; top: 10px; right: 10px; z-index: 100; 
          background-color: #343a40; color: #fff; padding: 12px 25px; 
          border-radius: 5px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); 
          font-weight: bold; text-transform: uppercase; transition: background-color 0.3s;" 
   onmouseover="this.style.backgroundColor='#495057'" onmouseout="this.style.backgroundColor='#343a40'">
  Login
</a>



    </div>
    <div class="search-bar text-center my-4">
        <form action="/search" method="GET">
            <input type="text" name="query" placeholder="Search for a book..." required>
            <button type="submit">Search</button>
          </form>
          
          
    
          <div class="container py-5">
            <div class="row justify-content-center">
                <% books.forEach(book => { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-60 text-center">
                        <!-- Book cover using Open Library Covers API -->
                        <img 
                            src="https://covers.openlibrary.org/b/olid/<%= book.olid %>-M.jpg" 
                            class="card-img-top" 
                            alt="Book Cover" 
                            onerror="this.src='/images/default-cover.jpg';"
                        >
                        <div class="card-body">
                            <h5 class="card-title"><strong>Book Details</strong></h5>
                            <p class="card-text"><strong>Description:</strong> <%= book.description %></p>
                            <p class="card-text"><strong>Rating:</strong> <%= book.rating %> / 5</p>
                            <a href="/books/<%= book.id %>" target="_blank" class="btn btn-primary">View Details</a>
                            <a href="/books/<%= book.id %>/edit" target="_blank" class="btn btn-primary">Edit</a>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
        
        
              
        </body>
        </html>          
            